.home-main-container
  %h1.headline.text-center EXPERTS
  -#.video-container
    %iframe{allowfullscreen: "", frameborder: "0", height: "360", src: "//www.youtube.com/embed/ugylrqigoKc?controls=0&showinfo=0", width: "480"}
  .image-container
    = image_tag("media_devices.jpg")
  .form-container
    - if user_signed_in? && current_user.confirmed? == false
      .action-button.padding= "Confirmation sent to #{current_user.email}"
    -elsif user_signed_in?
      .action-button.padding Thanks for signing up!
    - else
      .sign-up-form
        .sms-logo
          = image_tag("sms_logo.jpg")
        .sms-logo-slogan
          %h4 Text Anything
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = render partial: "devise/error_messages", locals: {flash: flash}
          .hidden-input-field
            = f.text_field :email, :autofocus => true, placeholder: "Email"
          .hidden-input-field
            = f.password_field :password, placeholder: "Password"
          .hidden-input-field
            .terms.margin-bottom
              %span= f.check_box :terms
              %span#accept= "I accept the #{link_to('terms and conditions', terms_path, :target => '_blank')}".html_safe
          .join-us-container
            .action-button.join-us Join us
          .sign-in-container
            .div OR
            %a.anchor-no-style{:href => "/users/sign_in"}
              .action-button.sign-in Sign in
          .action-button.submit.hide= f.submit "Submit"
  .learn-more-link
    %a{:href => "/#learn-more"} Learn More
.home-learn-more-container#learn-more
  .about-item-container
    .description
      %h1 Local Businesses
      %p Need a sub? Search sub shops and text your order.  
    .image
      = image_tag("local_businesses.jpg")
  .about-item-container
    .description 
      %h1 Local People
      %p Need to talk to a classmate? Search by your classes and text someone.
    .image
      = image_tag("local_people.jpg")
  .about-item-container
    .description
      %h1 Safe and Secure
      %p We focus on keeping your information private from other users.
    .image
      = image_tag("safe_and_secure.jpg")
  
  
